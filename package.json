{
  "name": "hello-coop",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "license": "MIT",
  "workspaces": [
    "src/index",
    "src/protocol"
  ],
  "scripts": {
    "preview": "npm run build && vite S3 --open --port 5575",
    "dev": "node scripts/dev-watch.js",
    "dev:index": "cd src/index && npm run dev -- --open",
    "dev:proto": "cd src/protocol && vite --open",
    "dev:pages": "vitepress dev src/pages --open",
    "dev:legal": "vitepress dev src/legal --open",
    "dev:resources": "vitepress dev src/resources --open",
    "build:legal": "vitepress build src/legal",
    "build:pages": "vitepress build src/pages",
    "build:proto": "cd src/protocol && npm run build && cd ../../ && shx cp src/protocol/dist/index.html S3/pages/protocol.html && shx cp src/protocol/dist/assets/* S3/pages/assets/",
    "build:index": "cd src/index && npm run build",
    "build:resources": "vitepress build src/resources",
    "build": "run-s build:*",
    "postbuild": "run-s postbuild:*",
    "postbuild:markdown": "node scripts/copy-markdown.js",
    "postbuild:sitemap": "node scripts/generate-sitemap.js",
    "postbuild:llms": "node scripts/generate-llms-txt.js",
    "test": "linkinator ./S3 --config linkinator.config.json",
    "test:blog": "linkinator https://blog.hello.coop --config linkinator.config.json"
  },
  "devDependencies": {
    "chokidar": "^3.6.0",
    "linkinator": "^5.0.2",
    "open": "^11.0.0",
    "shx": "^0.3.4",
    "sitemap": "^8.0.0",
    "turndown": "^7.2.2",
    "vite": "^3.1.1",
    "vitepress": "^1.0.0-alpha.4",
    "vue": "^3.2.37"
  },
  "dependencies": {
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5"
  }
}
